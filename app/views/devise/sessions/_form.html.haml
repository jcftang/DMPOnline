= semantic_form_for :user, :url => new_user_session_path do |f|
  = f.inputs do
    = f.input :email
    = f.input :password
    = f.input :remember_me, :as => :boolean

    = f.buttons class: "buttons indent" do
      = f.commit_button t('dmp.auth.sign_in')

= render :partial => "devise/shared/links"
